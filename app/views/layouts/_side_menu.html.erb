<div class="drawer lg:drawer-open h-full">
  <input id="side_menu" type="checkbox" class="drawer-toggle"/>
  <div class=" drawer-content flex flex-col items-center h-full overflow-y-auto ">
    <%= yield %>
    <label for="side_menu" class="btn btn-primary drawer-button lg:hidden">
      Open drawer
    </label>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
    <%= yield(:side_menu) %>
  </div>
</div>
