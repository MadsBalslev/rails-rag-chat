<div class="toast toast-end">
  <% flash.each do |type, msg| %>
    <div
      data-controller="notification"
      data-notification-hidden-value="false"
      class="
        transition transform duration-500 hidden alert
        <%= "alert-#{type}"  %>
      "
      data-transition-enter-from="opacity-0 translate-x-6"
      data-transition-enter-to="opacity-100 translate-x-0"
      data-transition-leave-from="opacity-100 translate-x-0"
      data-transition-leave-to="opacity-0 translate-x-6"
    >
      <div class="flex flex-row justify-between gap-4">
        <p class="text-base font-medium grow"><%= msg %></p>
        <button data-action="notification#hide"><%= lucide_icon("x") %></button>
      </div>

    </div>
  <% end %>
</div>
