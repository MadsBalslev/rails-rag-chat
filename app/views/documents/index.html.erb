<div class="flex flex-row justify-between items-center w-full">
  <h2 class="text-2xl font-bold">Documents</h2>
  <%= link_to new_document_path, class: "btn btn-primary", data: {turbo_frame: "modal"} do %>
    <%= lucide_icon('file-plus-2') %>
    Upload Document
  <% end %>
</div>

<section class="my-8">
  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Type</th>
          <th>Size</th>
          <th>Owner</th>
          <th>Upload Date</th>
        </tr>
      </thead>
      <tbody id="documents">
        <%= render @documents %>
    </table>
  </div>
</section>
