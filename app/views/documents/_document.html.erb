<tr>
  <td><%= document.id %></td>
  <td class="cursor-pointer hover:underline"><%= link_to document.name, rails_blob_path(document.file, disposition: "preview") %></td>
  <td><%= document.file.content_type %></td>
  <td><%= number_to_human_size(document.file.byte_size) %></td>
  <td class="cursor-pointer hover:underline"><%= link_to document.collection.title, collection_path(document.collection) %></td>
  <td><%= document.created_at.strftime("%b %d, %Y") %></td>
  <td
    class="<%= document.embedded? ? 'text-green-600' : 'text-red-600' %> flex justify-center"
  ><%= document.embedded? ? lucide_icon("badge-check") : lucide_icon("x") %></td>
</tr>
