<div class="header mb-8">
  <h2 class="text-2xl font-bold"><%= @collection.title %></h2>
</div>

<section>
  <div class="header">
    <h2 class="text-xl font-bold">Documents</h2>
    <%= link_to new_document_path(collection_id: @collection.id), class: "btn btn-md btn-circle btn-primary", data: {turbo_frame: "modal"} do %>
      <%= lucide_icon("plus") %>
    <% end %>
  </div>
  <%= render "documents/table", documents: @collection.documents %>
</section>
